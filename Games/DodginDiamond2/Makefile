####### Build rules


all: $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)
	rm -f *.o
	$(STRIP) $(TARGET)

moc: $(SRCMOC)

tmake: Makefile

Makefile: dd2.ezx.pro
	tmake dd2.ezx.pro -o Makefile

dist:
	$(TAR) dd2.ezx.tar dd2.ezx.pro $(SOURCES) $(HEADERS) $(INTERFACES) $(DIST)
	$(GZIP) dd2.ezx.tar

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(UICIMPLS) $(UICDECLS) $(TARGET)
	-rm -f *~ core

