####### Compiler, tools and options

CC		=	$(SDK_CC)
CXX		=	$(SDK_CXX)
CFLAGS	=	-pipe `sdl-config --cflags` $(SDK_CFLAGS) -DEZX -Wall -W -O2 -mcpu=iwmmxt -mtune=iwmmxt -DNO_DEBUG
CXXFLAGS=	$(CFLAGS) -DQWS -fexceptions -fno-rtti -DNO_DEBUG
INCPATH	=	-I$(SDK_INC_DIR) -I$(SDK_SDL_INC_DIR) -I./Box2D/Include
LINK	=	$(SDK_CXX)
LFLAGS	=	`sdl-config --libs` $(SDK_LFLAGS)
LIBS	=	$(SUBLIBS) -L$(SDK_EZX_LIB_DIR) -lSDL -lSDLmain -lezxappbase -lpthread -lz -lSDL_image libbox2d.so
STRIP	=	$(SDK_STRIP)
MOC		=	$(QTDIR)/bin/moc
UIC		=	$(QTDIR)/bin/uic

TAR		=	tar -cf
GZIP	=	gzip -9f

####### Files

HEADERS =	Array.h \
		Canvas.h \
		Common.h \
		Config.h \
		Hildon.h \
		Levels.h \
		Path.h \
		SDL_image.h \
		happyhttp.h \
		mySDLEvent.h \
		mystd.h \
		zipfile.h
SOURCES =	Canvas.cpp \
		Game.cpp \
		Hildon.cpp \
		Levels.cpp \
		Path.cpp \
		happyhttp.cpp \
		mySDLEvent.cpp \
		mystd.cpp
OBJECTS =	Canvas.o \
		Game.o \
		Hildon.o \
		Levels.o \
		Path.o \
		happyhttp.o \
		mySDLEvent.o \
		mystd.o
INTERFACES =	
UICDECLS =	
UICIMPLS =	
SRCMOC	=	
OBJMOC	=	
DIST	=	
TARGET	=	numptyphysics.ezx
INTERFACE_DECL_PATH = .

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules


all: $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET).unstripped $(OBJECTS) $(OBJMOC) $(LIBS)
	-cp -u $(TARGET).unstripped $(TARGET)
	$(STRIP) $(TARGET)

moc: $(SRCMOC)

tmake: Makefile

Makefile: numptyphysics.ezx.pro
	tmake numptyphysics.ezx.pro -o Makefile

dist:
	$(TAR) numptyphysics.ezx.tar numptyphysics.ezx.pro $(SOURCES) $(HEADERS) $(INTERFACES) $(DIST)
	$(GZIP) numptyphysics.ezx.tar

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(UICIMPLS) $(UICDECLS) $(TARGET).unstripped $(TARGET)
	-rm -f *~ core

